#!/bin/sh
# @(#)$Date: 2008/05/20 20:40:27 $
#
# jmlc -- script for running the JML runtime assertion checker compiler
#
# SYNOPSIS: set CLASSPATH and run JML runtime assertion checker compiler.

# If needed, change the following configuration parameters for your system
# by changing what is to the right of the equals sign (=) on the lines below
: ${JPATHSEP=';'}                           # change to ':' for Unix
: ${JFILESEP="\\"}                          # change to "/" for Unix
: ${JMLDIR=`cygpath -wa "/usr/local/JML"`}  # local home of JML

CLASSPATH=".${JPATHSEP}${JMLDIR}${JFILESEP}bin${JFILESEP}jml-release.jar${JPATHSEP}${JMLDIR}${JFILESEP}specs${JPATHSEP}${JMLDIR}${JPATHSEP}${CLASSPATH}"
export CLASSPATH

# You can use `java' or `jre -classpath "$CLASSPATH"' below
# but these have to be in your PATH
exec java -Xms64m -Xmx128m org.jmlspecs.jmlrac.Main "$@"

